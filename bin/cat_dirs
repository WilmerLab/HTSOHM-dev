#!/bin/bash

IN_DIR1=$1
IN_DIR2=$2
OUT_DIR=$3

echo "combining:"
echo $IN_DIR1
echo $IN_DIR2
echo "..."

mkdir $OUT_DIR

cat $IN_DIR1/ch4_abs_cc_cc.txt $IN_DIR2/ch4_abs_cc_cc.txt > $OUT_DIR/ch4_abs_cc_cc.txt
cat $IN_DIR1/HVdata2col.txt $IN_DIR2/HVdata2col.txt > $OUT_DIR/HVdata2col.txt
cat $IN_DIR1/SAdata_m2_cc.txt $IN_DIR2/SAdata_m2_cc.txt > $OUT_DIR/SAdata_m2_cc.txt

cp -rf $IN_DIR1/MAT-* $OUT_DIR
cp -rf $IN_DIR2/MAT-* $OUT_DIR

echo "...done!"
