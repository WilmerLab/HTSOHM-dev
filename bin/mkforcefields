#!/bin/bash
#while [ -e "$(find ./ -name *.cif -printf '%h' -quit)" ]
LIBRARY_SIZE=$1
START_MAT=$2

export RASPA_DIR=${HOME}/RASPA

for (( i=START_MAT; i <= START_MAT+LIBRARY_SIZE; i++ ))
do    
    MAT_FF_DIR=${RASPA_DIR}/share/raspa/forcefield/MAT-$i
    mkdir $MAT_FF_DIR
    cd MAT-$i
    
    cp ./force_field_mixing_rules.def $MAT_FF_DIR    
    cp ./force_field.def $MAT_FF_DIR
    cp ./pseudo_atoms.def $MAT_FF_DIR
#    cp ./force_field_mixing_rules.def /share/raspa/forcefield/MAT-$i    
#    cp ./force_field.def ~/RASPA-2.0/src/share/raspa/forcefield/MAT-$i/    
#    cp ./pseudo_atoms.def ~/RASPA-2.0/src/share/raspa/forcefield/MAT-$i/
    cd ..
done
